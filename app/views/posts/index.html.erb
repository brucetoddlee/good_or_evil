<h1>Newsfeed</h1>

<% @posts.each do |post| %>
  <div>
    <div><img src="<%= post.photo_link %>"></div><br>
    <div><%= post.text_overlay %></div><br>
    <div>Good ratings: <%= post.likes.where(good?: true).count %></div>
    <div>Evil ratings: <%= post.likes.where(good?: false).count %></div>
  </div><br>

  <div>
    <h4>Comments</h4>
    <% post.comments.each do |comment| %>
      <div><%= comment.body %></div><br>
      <div>Good ratings: <%= comment.likes.where(good?: true).count %></div>
      <div>Evil ratings: <%= comment.likes.where(good?: false).count %></div>
    <% end %>
  </div>
<% end %>